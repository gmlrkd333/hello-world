<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".InfoPage">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 많이 먹은 음식 "
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge2"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="성별"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge"
                ></TextView>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/sp1"
                ></Spinner>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="몸무게"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge"
                ></TextView>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/sp2"
                ></Spinner>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="키"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge"
                ></TextView>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/sp3"
                ></Spinner>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="나이"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge"
                ></TextView>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/sp4"
                ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:orientation="horizontal"

            >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pichart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/edge3"></com.github.mikephil.charting.charts.PieChart>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 나이에 따른 칼로리 변화 "
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge2"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            >
            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/barchart1"
                android:layout_margin="2dp"
                android:background="@drawable/edge3"
                ></com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 칼로리 흐름표 "
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edge2"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            >
            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linechart1"
                android:layout_margin="2dp"
                android:background="@drawable/edge3"
                ></com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </LinearLayout>
</ScrollView>