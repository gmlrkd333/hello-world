<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#edfce8"
    android:fillViewport="true"
    tools:context=".UserPage">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:background="#edfce8"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/userimg"
                android:layout_weight="4"
                android:src="@drawable/img"
                android:background="@drawable/edge"
                ></ImageView>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="사과"
                android:background="@drawable/edge"

                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"

            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#edfce8"
                android:orientation="vertical"
                android:padding="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        android:text="나이"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        android:id="@+id/agetv"
                        android:layout_weight="3"
                        ></TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="체중"
                        android:textSize="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        android:gravity="center"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:id="@+id/weighttv"
                        android:background="@drawable/edge"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="성별"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:id="@+id/sextv"
                        android:background="@drawable/edge"
                        ></TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="BMI"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:id="@+id/bmitv"
                        android:background="@drawable/edge"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="대사량"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:id="@+id/daesatv"
                        android:background="@drawable/edge"
                        ></TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="키"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:background="@drawable/edge"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0살"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:id="@+id/heighttv"
                        android:background="@drawable/edge"
                        ></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/advimv1"
                        android:src="@drawable/star_verygood"
                        ></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text 텍스트 가나다라마바사아자차카타파하"
                        android:id="@+id/advtv1"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        ></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="#edfce8"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        ><TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2주 칼로리"
                        android:textSize="15dp"
                        android:background="@drawable/edge"
                        ></TextView></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/modifybt"
                            android:text="수정"
                            android:textSize="15dp"
                            android:background="@drawable/edge2"
                            ></Button>
                    </LinearLayout>
                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:id="@+id/chart1"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="3dp"
                    android:background="@drawable/edge3"
                    ></com.github.mikephil.charting.charts.LineChart>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4주 칼로리"
                    android:textSize="15dp"
                    android:background="@drawable/edge"
                    ></TextView>
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:id="@+id/chart2"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="3dp"
                    android:background="@drawable/edge3"
                    ></com.github.mikephil.charting.charts.LineChart>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>